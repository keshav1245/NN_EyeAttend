<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageUpload"
    android:background="@drawable/upload_image_back"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/editTextTags"
                android:hint="Enter tags"
                android:textColor="@color/headings"
                android:textColorHint="@color/headings"
                android:shadowColor="@color/colorPrimaryDark"
                android:layout_margin="30dp"
                android:textAlignment="center"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="320dp"
                android:layout_gravity="center"
                android:tooltipText="Image will Appear here"
                android:layout_height="240dp"
                android:elevation="10dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:background="@drawable/trans_white_rectangle"
                />


            <Button
                android:background="@drawable/but"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:id="@+id/buttonUploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redstd"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Upload Image" />


            <TextView

                android:hint="Present Roll Numbers"
                android:textColor="@color/headings"
                android:textColorHint="@color/headings"
                android:shadowColor="@color/colorPrimaryDark"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/attendence"
                android:hint="Present student roll number will appear here!"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:shadowColor="@color/headings"
                android:shadowDx="2"
                android:textAlignment="center"
                android:shadowDy="2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/trans_white_rectangle"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView

                android:hint="Absent Roll numbers"
                android:textColor="@color/headings"
                android:textColorHint="@color/headings"
                android:shadowColor="@color/colorPrimaryDark"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/absent"
                android:hint="Absent student roll number will appear here!"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:shadowColor="@color/headings"
                android:shadowDx="2"
                android:shadowDy="2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/trans_white_rectangle"
                android:padding="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>